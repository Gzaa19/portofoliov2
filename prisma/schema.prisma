generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ==========================================
// Project Model - Untuk menyimpan data project
// ==========================================
model Project {
  id          String   @id @default(cuid())
  slug        String   @unique // URL-friendly ID (e.g., "ecommerce-platform")
  title       String
  description String   @db.Text
  link        String? // Live demo URL (optional)
  github      String? // GitHub repository URL (optional)
  image       String? // Project image URL (optional)
  featured    Boolean  @default(false) // Untuk menandai project unggulan
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke tags
  tags ProjectTag[]

  @@map("projects")
}

// ==========================================
// Tag Model - Untuk menyimpan tech stack tags
// ==========================================
model Tag {
  id    String  @id @default(cuid())
  name  String  @unique // e.g., "Next.js", "React", "TypeScript"
  slug  String  @unique // URL-friendly version
  color String? // Optional hex color for the tag

  // Relasi ke projects
  projects ProjectTag[]

  @@map("tags")
}

// ==========================================
// Junction table untuk relasi many-to-many Project <-> Tag
// ==========================================
model ProjectTag {
  projectId String
  tagId     String

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([projectId, tagId])
  @@map("project_tags")
}

// ==========================================
// SocialLink Model - Untuk menyimpan social links
// ==========================================
model SocialLink {
  id          String   @id @default(cuid())
  name        String // e.g., "GitHub", "LinkedIn"
  username    String // e.g., "@Gzaa19"
  description String?
  url         String
  iconName    String // Reference to icon component
  iconBg      String? // CSS class for background
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("social_links")
}

// ==========================================
// Admin Model - Untuk menyimpan kredensial admin
// ==========================================
model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String // Hashed password
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

// ==========================================
// Location Model - Untuk menyimpan lokasi dengan koordinat
// Hanya boleh ada 1 lokasi aktif pada satu waktu
// ==========================================
model Location {
  id        String   @id @default(cuid())
  name      String // Nama lokasi (e.g., "Jakarta, Indonesia")
  address   String? // Alamat lengkap
  latitude  Float // Koordinat latitude
  longitude Float // Koordinat longitude
  zoom      Int      @default(12) // Zoom level untuk map
  isActive  Boolean  @default(true) // Hanya 1 yang boleh aktif
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("locations")
}

// ==========================================
// ToolboxCategory Model - Kategori untuk toolbox (e.g., "Programming Languages")
// ==========================================
model ToolboxCategory {
  id        String   @id @default(cuid())
  name      String   @unique // e.g., "Programming Languages"
  order     Int      @default(0) // Urutan tampil
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi ke items
  items ToolboxItem[]

  @@map("toolbox_categories")
}

// ==========================================
// ToolboxItem Model - Item dalam toolbox (e.g., "React", "Next.js")
// ==========================================
model ToolboxItem {
  id        String   @id @default(cuid())
  name      String // e.g., "React"
  iconName  String // Icon name dari react-icons/si (e.g., "SiReact")
  color     String // Hex color (e.g., "#61DAFB")
  order     Int      @default(0) // Urutan tampil dalam kategori
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi ke category
  categoryId String
  category   ToolboxCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("toolbox_items")
}

// ==========================================
// Profile Model - Untuk menyimpan data "About Me"
// ==========================================
model Profile {
  id          String   @id @default(cuid())
  description String   @db.Text
  photoUrl    String // URL foto profil
  resumeUrl   String // URL resume PDF
  isActive    Boolean  @default(true) // Hanya 1 yang aktif
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("profiles")
}

// ==========================================
// HeroSettings Model - Untuk mengatur Hero section
// ==========================================
model HeroSettings {
  id        String   @id @default(cuid())
  name      String // Nama yang ditampilkan (e.g., "Gzaaa")
  role      String // Role/title (e.g., "Full Stack Developer")
  status    String   @default("available") // "available", "busy", "new_project"
  isActive  Boolean  @default(true) // Hanya 1 yang aktif
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("hero_settings")
}
